<h1><%= @merchant.name %>'s Discounts</h1>
<%= render partial: "form" %>
<div class = 'discounts'>
  <h2> Discounts </h2>
    <% @merchant.bulk_discounts.each do |discount| %>
    <div id= 'discounts-<%=discount.id%>'>
      <p> <%=link_to "Discount ##{discount.id}", merchant_bulk_discount_path(@merchant, discount) %></p>
      <p>Percentage off: %<%= discount.percentage_discount%></p>
      <p>Minimum number of Items: <%= discount.quantity_threshold%></p>
      <p> <%= link_to "Delete Discount ##{discount.id}", merchant_bulk_discount_path(@merchant, discount), method: :delete %> </p>
      <br>
    <%end%>
  </div>
</div>

<%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant) %>

<div class="upcoming_holidays">
  <section> <h3> Upcoming Holidays </h3>
    <ul>
      <% @holidays.each do |holiday| %>
        <li> <%= holiday.name %> - <%= holiday.date %> </li>
      <% end %>
    </ul>
  </section>
</div>