<%= render partial: "form" %>

<h1> Create New Discount </h1>

<%= form_with model: @bulk_discounts, url: merchant_bulk_discounts_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :percentage_discount, "Percentage discount" %>
  <%= f.number_field :percentage_discount %>

  <%= f.label :quantity_threshold, "Quantity threshold" %>
  <%= f.number_field :quantity_threshold %>

  <%= f.button "Create Discount" %>
<% end %>